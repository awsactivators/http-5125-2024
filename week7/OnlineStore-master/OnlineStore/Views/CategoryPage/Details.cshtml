@model OnlineStore.Models.ViewModels.CategoryDetails

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryColor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryColor)
        </dd>
        <dt>
            Products:
        </dt>
        <dd>
            <ul>
            @foreach(var ProductDto in Model.CategoryProducts)
            {
                <li>@ProductDto.ProductName</li>
            }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Category.CategoryId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
