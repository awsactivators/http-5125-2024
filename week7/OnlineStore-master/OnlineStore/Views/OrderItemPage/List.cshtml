@model IEnumerable<OnlineStore.Models.OrderItemDto>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="New">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderItemUnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderItemQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductSKU)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderItemUnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderItemQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductSKU)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderItemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderItemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderItemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
